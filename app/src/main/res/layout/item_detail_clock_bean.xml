<?xml version="1.0" encoding="utf-8"?><!--统计后 检索数据-->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <!--<www.ufcus.com.theme.ColorTextView-->
    <!--android:id="@+id/text"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:padding="10dp"-->
    <!--android:textColorLink="?attr/colorPrimaryDark"-->
    <!--android:textSize="16sp" />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/ll_day_week"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/day"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="01日"
                android:textColor="@color/colorRedPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/week"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="星期五"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/ll_day_week"
            android:background="@color/colorSecondText" />

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/view1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/first_clock_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="09:05" />

            <TextView
                android:id="@+id/last_clock_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="09:05" />

            <TextView
                android:id="@+id/work_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="8个小时"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <!--<View-->
            <!--android:layout_width="80dp"-->
            <!--android:layout_height="40dp" />-->


        </LinearLayout>

        <TextView
            android:id="@+id/work_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="8dp"
            android:text="正常"
            android:textColor="@color/colorGreenPrimary"
            android:textSize="14sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>